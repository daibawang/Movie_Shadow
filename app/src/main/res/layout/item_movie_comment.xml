<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.sgcy.shadow.MovieView.ASmartimgView
        android:id="@+id/comment_img"
        android:layout_width="43dp"
        android:layout_height="41dp"
        android:layout_margin="@dimen/dp_10" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/comment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:text="呆霸王"
                android:textColor="#000000"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/com_ishot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="30dp"
                android:gravity="right"
                android:text="热评"
                android:textColor="@color/red_ff4a57"
                android:textSize="@dimen/dp_12" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="@dimen/dp_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView

                android:id="@+id/comment_star"
                android:src="@drawable/s1"
                android:layout_width="75dp"
                android:layout_height="20dp" />
            <TextView
                android:textColor="#F6AA14"
                android:layout_marginLeft="8dp"
                android:textSize="@dimen/dp_12"
                android:id="@+id/comment_score"
                android:text="7分"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/comment_detail"
            android:text="一堆的平卢军小姐肯定会发动机负荷看到v赞赞赞赞赞赞江湖豪杰"
            android:layout_width="280dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/comment_time_place"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/dp_10"
            android:textColor="@color/vd_text_gray"
            android:text="北京"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>
</LinearLayout>